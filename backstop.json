{
  "id": "backstop_default",
  "viewports": [
    {
      "label": "phone",
      "width": 320,
      "height": 480
    },
    {
      "label": "tablet",
      "width": 1024,
      "height": 768
    }
  ],
  "onBeforeScript": "puppet/onBefore.js",
  "onReadyScript": "puppet/onReady.js",
  "scenarios": [
    {
      "label": "Empty Form",
      "url": "http://localhost:8080/",
      "onBeforeScript": "puppet/clearLocalStorage.js",
      "misMatchThreshold" : 0.1,
      "requireSameDimensions": true
    },
    {
      "label": "Form with Correct Values",
      "url": "http://localhost:8080/",
      "onBeforeScript": "puppet/clearLocalStorage.js",
      "selectors": [
        "form"
      ],
      "keyPressSelectors": [
        {
          "selector": "#title",
          "keyPress": "My Fancy Title"
        },
        {
          "selector": "#content",
          "keyPress": "My fancy content."
        }
      ],
      "clickSelector": "form",
      "misMatchThreshold" : 0.1,
      "requireSameDimensions": true
    },
    {
      "label": "Form with Incorrect Values",
      "url": "http://localhost:8080/",
      "onBeforeScript": "puppet/clearLocalStorage.js",
      "selectors": [
        "form"
      ],
      "keyPressSelectors": [
        {
          "selector": "#title",
          "keyPress": "Oh"
        },
        {
          "selector": "#content",
          "keyPress": "My"
        }
      ],
      "misMatchThreshold" : 0.1,
      "requireSameDimensions": true
    },
    {
      "label": "Submitted Form with Correct Values",
      "url": "http://localhost:8080/",
      "keyPressSelectors": [
        {
          "selector": "#title",
          "keyPress": "My Fancy Title"
        },
        {
          "selector": "#content",
          "keyPress": "My fancy content."
        }
      ],
      "clickSelector": "button",
      "misMatchThreshold" : 0.1,
      "requireSameDimensions": true
    }
  ],
  "paths": {
    "bitmaps_reference": "backstop_data/bitmaps_reference",
    "bitmaps_test": "backstop_data/bitmaps_test",
    "engine_scripts": "backstop_data/engine_scripts",
    "html_report": "backstop_data/html_report",
    "ci_report": "backstop_data/ci_report"
  },
  "report": ["browser"],
  "engine": "puppeteer",
  "engineOptions": {
    "args": ["--no-sandbox"]
  },
  "asyncCaptureLimit": 5,
  "asyncCompareLimit": 50,
  "debug": false,
  "debugWindow": false
}
